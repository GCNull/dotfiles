{
    "workbench.colorTheme": "Monokai++ Unified",
    "files.autoSave": "afterDelay",
    "editor.fontSize": 12,
    "workbench.iconTheme": "material-icon-theme",
    "editor.inlayHints.enabled": "offUnlessPressed",
    "rust-analyzer.inlayHints.closureReturnTypeHints.enable": "with_block",
    "rust-analyzer.inlayHints.discriminantHints.enable": "always",
    "rust-analyzer.inlayHints.expressionAdjustmentHints.enable": "always",
    "rust-analyzer.inlayHints.lifetimeElisionHints.enable": "always",
    "rust-analyzer.inlayHints.reborrowHints.enable": "always",
    "debug.onTaskErrors": "debugAnyway",
    "terminal.integrated.fontFamily": "monospace",
    "rust-analyzer.cargo.buildScripts.overrideCommand": null,
    "rust-analyzer.debug.openDebugPane": true,
    "rust-analyzer.diagnostics.previewRustcOutput": true,
    "editor.fontFamily": "'Droid Sans Mono', 'monospace', monospace, 'JetBrains Mono'",
    "git.confirmSync": false,
    "git.autofetch": true,
    "audioCues.lineHasBreakpoint": "on",
    "audioCues.taskFailed": "on",
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.fontSize": 12,
    "launch": {
        "tasks": [
            {
                "type": "cargo",
                "command": "clippy",
                "problemMatcher": [
                    "$rustc"
                ],
                "group": "build",
                "label": "rust: cargo clippy"
            },
            {
                "type": "cargo",
                "command": "check",
                "problemMatcher": [
                    "$rustc"
                ],
                "group": "build",
                "label": "rust: cargo check"
            },
            {
                "type": "cargo",
                "command": "r",
                "problemMatcher": [
                    "$rustc"
                ],
                "group": "build",
                "label": "rust: cargo run"
            },
            {
                "type": "shell",
                "command": "./build_server_release.sh",
                "problemMatcher": [
                    "$rustc"
                ],
                "group": "none",
                "label": "Build server release"
            },
        ]
    },
    "gitlens.graph.experimental.minimap.enabled": true,
    "terminal.integrated.scrollback": 100000,
    "errorLens.removeLinebreaks": false,
    "search.showLineNumbers": true,
    "files.trimTrailingWhitespace": true,
    "editor.cursorBlinking": "phase",
    "diffEditor.codeLens": true,
    "terminal.integrated.shellIntegration.enabled": false
}
